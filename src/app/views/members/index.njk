{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Member</th>
                    <th>E-mail</th>
                    <th>Peso</th>
                    <th>Altura</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{member.avatar_url}})"></span>
                            {{ member.name }}
                        </td>
                        <td>{{ member.email }}</td>
                        <td>{{ member.weight }}</td>
                        <td>{{ member.eight }}</td>
                        <td><a href="/members/{{ member.id }}">Ver</a> </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}